        <TextBox x:Name="txt_Testo" HorizontalAlignment="Left" Height="23" Margin="45,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbl_Titolo" Content="Titolo" HorizontalAlignment="Left" Margin="45,104,0,0" VerticalAlignment="Top" Width="120"/>
