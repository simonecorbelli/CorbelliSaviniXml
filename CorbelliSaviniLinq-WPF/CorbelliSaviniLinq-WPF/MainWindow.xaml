        <TextBox x:Name="txt_newGenere" HorizontalAlignment="Left" Height="23" Margin="45,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_searchTitolo" HorizontalAlignment="Left" Height="23" Margin="45,306,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Titolo" HorizontalAlignment="Left" Margin="45,275,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Genere" HorizontalAlignment="Left" Margin="45,334,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_Sostituisci" Content="Cerca e Sostituisci" HorizontalAlignment="Left" Margin="194,319,0,0" VerticalAlignment="Top" Width="107" Height="41" Click="btn_Sostituisci_Click"/>

